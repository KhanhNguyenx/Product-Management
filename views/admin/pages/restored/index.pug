extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
  +alert-success("5000")
  +alert-error("5000")
  h1(class="mb-4") #{pageTitle}
  .card.mb-3
    .card-header Thanh Tìm kiếm
        .card-body
            .row
                .col-6 
                    +search(keyword)
  .card.mb-3
    .card-header Danh sách sản phẩm đã xóa
      .card-body
        .row 
        table(
            class="table table-hover table-sm"
            checkbox-multi
        )
            thead
            tr
                th STT
                th Hình ảnh
                th Tiêu đề
                th Trạng thái

            tbody
            each item, index in productRecords 
                tr 
                td #{index + 1}
                td
                    img(
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                    )
                td #{item.title}
                td
                    a(
                        href=`${prefixAdmin}/restored/product-restored/${item.id}`
                        class="badge badge-info"
                    ) Khôi phục
        +pagination(pagination)
  .card.mb-3
    .card-header Danh sách danh mục đã xóa
      .card-body
        .row 
        table(
            class="table table-hover table-sm"
            checkbox-multi
        )
            thead
            tr

                th STT
                th Hình ảnh
                th Tiêu đề
                th Trạng thái

            tbody
            each item, index in productCategoryRecords 
                tr 
                td #{index + 1}
                td
                    img(
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                    )
                td #{item.title}
                td
                    a(
                        href=`${prefixAdmin}/restored/product-category-restored/${item.id}`
                        class="badge badge-info"
                    ) Khôi phục
        +pagination(pagination)

    script(src="/admin/js/product.js")
