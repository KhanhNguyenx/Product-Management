mixin pagination(pagination)
    nav
    ul(class="pagination")
      li(class="page-item") 
        if(pagination.currentPage != 1)
          button(
            class="page-link"
            button-pagination = 1
          ) Trang đầu tiên
      if(pagination.currentPage > 1)
        li(class="page-item") 
          button(
            class="page-link"
            button-pagination = pagination.currentPage -1
          ) Trang trước
      //- Hiển thị đầy đủ trang
      - for (var i = 1; i <= pagination.totalPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active": ""}`) 
          button(
            class="page-link"
            button-pagination = i 
        ) #{i}
        //- Chỉ hiển thị 3 trang gần nhất
        //- - for (var i = pagination.currentPage -1 ; i <= pagination.currentPage +1; i++)
        //- if(i != 0)
        //-   li(class=`page-item ${pagination.currentPage == i ? "active": ""}`) 
        //-     button(
        //-       class="page-link"
        //-       button-pagination = i 
        //-   ) #{i} 
      if(pagination.currentPage < pagination.totalPage)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = pagination.currentPage +1
          ) Kế tiếp
      if(pagination.currentPage != pagination.totalPage)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination = pagination.totalPage
          ) Trang cuối cùng 