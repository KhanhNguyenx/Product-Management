extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if(productCategory.title)
    a(href=`${prefixAdmin}/products-category/detail/${productCategory.id}`)
        h1(class="mb-4") #{productCategory.title}

  if (productCategory.thumbnail)
    div(class="mb-4")
      img(
        src=productCategory.thumbnail
        style="width: 200px"
      )

  if (productCategory.status)
    div(class="mb-4")
      span Trạng thái:
      if (productCategory.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng hoạt động

  if (productCategory.parent_id)
    div(class="mb-4") Danh mục cha: <b>#{productCategory.parent_id}</b>

  if (productCategory.position)
    div(class="mb-4") Vị trí: <b>#{productCategory.position}</b>

  if (productCategory.description)
    div(class="mb-4") Mô tả: !{productCategory.description} 
    //- ! để hiển thị ra mã html (dùng để hiển thị các thuộc tính)
    //- # để hiển thị ở dạng string (lưu trong dtb)

  a(
    class="btn btn-warning"
    href=`${prefixAdmin}/products-category/edit/${productCategory.id}`
    ) Chỉnh sửa
  a(
    class="btn btn-info"
    href=`${prefixAdmin}/products-category`
    ) Quay lại

    
    